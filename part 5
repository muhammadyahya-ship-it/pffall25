#include <stdio.h>
#include <string.h>

void EnMes(char message[]);
void DeMes(char message[]);
void RevStr(char str[]);
char TogBits(char ch);

int main() {
    int choice;
    char message[500];

    do {
        printf("\n====== TCS Secure Message Utility ======\n");
        printf("1. Encode Message\n");
        printf("2. Decode Message\n");
        printf("3. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);
        getchar();

        switch(choice) {
            case 1:
                printf("\nEnter the message to encode: ");
                fgets(message, sizeof(message), stdin);
                message[strcspn(message, "\n")] = '\0';
                EnMes(message);
                break;

            case 2:
                printf("\nEnter the message to decode: ");
                fgets(message, sizeof(message), stdin);
                message[strcspn(message, "\n")] = '\0';
                DeMes(message);
                break;

            case 3:
                printf("\nExiting... Goodbye!\n");
                break;

            default:
                printf("\nInvalid choice! Try again.\n");
        }

    } while(choice != 3);

    return 0;
}

void RevStr(char str[]) {
    int len = strlen(str);
    for (int i = 0; i < len / 2; i++) {
        char temp = str[i];
        str[i] = str[len - i - 1];
        str[len - i - 1] = temp;
    }
}

char TogBits(char ch) {
    ch = ch ^ (1 << 1);
    ch = ch ^ (1 << 4);
    return ch;
}

void EnMes(char message[]) {
    RevStr(message);
    for (int i = 0; i < strlen(message); i++) {
        message[i] = TogBits(message[i]);
    }
    printf("\nEncoded Message: %s\n", message);
}

void DeMes(char message[]) {
    for (int i = 0; i < strlen(message); i++) {
        message[i] = TogBits(message[i]);
    }
    RevStr(message);
    printf("\nDecoded Message: %s\n", message);
}
