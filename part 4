#include <stdio.h>

void push(int stack[100]){
    int static i=0;
    if (i >= 99) {
    printf("Stack overflow!\n");
    return;
    }
    printf("\nEnter element:");
    scanf("%d",&stack[i]);
    if(stack[i]==9999){
        printf("\nTry another element(9999 is not valid)");
        return;
    }
    stack[i+1]=9999;
    i++;
    return;
}
void pop(int stack[100]){
    int count=0;
    if(stack[0]==9999){
        printf("\nStack has no Elements");
    }
    else{
    for(int j=0;j<=100;j++){
        if(stack[j]==9999){
          count=j;
          break;
        }
    }
    printf("\nPopped Element:%d\n",stack[count-1]);
    stack[count-1]=9999;
    }
    return;
}
void peek(int stack[100]){
   int count=0;
    for(int j=0;1;j++){
        if(stack[j]==9999){
          count=j;
          break;
        }
    }
    printf("\nTop Element:%d\n",stack[count-1]);
    return;
}
void display(int stack[100]){
    int count=0;
    for(int j=0;1;j++){
        if(stack[j]==9999){
          count=j;
          break;
        }
    }
    for(int i=count;i>=0;i--){
        if(i==count){
            continue;
        }
        printf("\n| %d |",stack[i]);
    }
    return;
}
int main() {
    int stack[100];
    stack[0]=9999;
    int choice;
    int i;
    int j;
    printf("---------MENU--------\n1.PUSH\n2.POP\n3.PEEK\n4.DISPLAY\n5.EXIT\n");
    while(1){
        printf("\nEnter Choice:");
        scanf("%d",&choice);
        switch(choice){
            case 1:
            push(stack);
            break;
            case 2:
            pop(stack);
            break;
            case 3:
            peek(stack);
            break;
            case 4:
            display(stack);
            break;
            case 5:
            return 0;
            default:
            printf("Invalid Choice: Try Again");
            break;
        }
    }
    return 0;
}
